{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "src",
    "paths": {
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/types": ["types/index.ts"],
      "@/types/*": ["types/*"],
      "@/tests/*": ["tests/*"],
      "@/context/*": ["context/*"],
      "@/util/*": ["util/*"],
      "@/services/*": ["services/*"],
      "@/hooks/*": ["hooks/*"],
      "@mf-types/*": ["../@mf-types/*"],
      "@/mockData": ["mockData/index.ts"],
      "@/mockData/*": ["mockData/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["vite/client", "node"]
  },
  "include": ["src", "src/tests/setupTests.d.ts"],
  "exclude": ["node_modules", "src/**/*.js"]
}
